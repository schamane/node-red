{
    "name": "node-red",
    "version": "3.0.2",
    "description": "Low-code programming for event-driven applications",
    "homepage": "http://nodered.org",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/node-red/node-red.git"
    },
    "main": "lib/red.js",
    "scripts": {
        "start": "node -r source-map-support/register red.js",
        "dev": "nodemon --trace-warnings -r source-map-support/register red.js",
        "depcheck": "npx depcheck",
        "test": "nodemon --help"
    },
    "bin": {
        "node-red": "./red.js",
        "node-red-pi": "bin/node-red-pi"
    },
    "contributors": [
        {
            "name": "Nick O'Leary"
        },
        {
            "name": "Dave Conway-Jones"
        },
        {
            "name": "Nazar Kulyk"
        }
    ],
    "keywords": [
        "editor",
        "messaging",
        "iot",
        "flow"
    ],
    "dependencies": {
        "@node-red/editor-api": "3.0.2",
        "@node-red/runtime": "3.0.2",
        "@node-red/util": "3.0.2",
        "@node-red/nodes": "3.0.2",
        "semver": "7.3.7"
    },
    "devDependencies": {
        "nodemon": "^2.0.20",
        "source-map-support": "^0.5.21"
    },
    "nodemonConfig": {
        "ignore": [
            "src/tests/*",
            "docs/*"
        ],
        "watch": [
            "lib",
            "../../"
        ],
        "params": "--max_old_space_size=200 -r source-map-support/register",
        "delay": "2500"
    },
    "engines": {
        "node": ">=16"
    }
}